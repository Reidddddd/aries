#!/bin/bash

# Deal with parameters
if [ "$#" -lt 6 ]
then
  echo ""
  echo "Usage: aries --kind [java|hbase|hdfs|kafka|phoenix] --toy [name of toy] --conf_dir [configuration's directory] --help"
  echo ""
  exit 1
fi

get_value() {
  k=$1
  v=$2
  if [[ $k == "--kind" ]]
  then
    kind=$v
  elif [[ $k == "--toy" ]]
  then
    toy_name=$v
  elif [[ $k == "--conf_dir" ]]
  then
    conf_dir=$v
  elif [[ $k == "--help" ]]
  then
    help="true"
  fi
}

get_value "$1" "$2"
get_value "$3" "$4"
get_value "$5" "$6"
get_value "$7"

# Get script directory
bin=`dirname $0`
bin=`cd "$bin">/dev/null; pwd`

# Set environment parameters
. $bin/aries-env.sh
java_cmd=$JAVA_HOME/bin/java
hbase_home=$HBASE_HOME
hdfs_home=$HDFS_HOME
kafka_home=$KAFKA_HOME
phoenix_home=$PHOENIX_HOME

grep_thin_jar() {
  for jar in $1
  do
    if [[ $jar == *"jar-with-dependencies"* ]]
    then
      continue
    fi
    exe_jar=$jar
  done
}

regex="(-(test|src|scaladoc|javadoc)\.jar|jar.asc)$"
should_include_file() {
  file=$1
  if [ -z "$(echo "$file" | egrep "$regex")" ] ; then
    return 0
  else
    return 1
  fi
}

grep_phoenix_jar() {
  for jar in $1
  do
    if [[ $jar == *"phoenix-client"* ]]
    then
      exe_jar=$jar
    fi
  done
}

# Extract client executable jars
# aries-common jar
grep_thin_jar "$bin/../aries-common/target/aries-common-[0-9]*.[0-9]*.jar"
execute_jar=$exe_jar
# aries-java jar
grep_thin_jar "$bin/../aries-java/target/aries-java-[0-9]*.[0-9]*.jar"
execute_jar=$execute_jar:$exe_jar
# aries-hbase jar
grep_thin_jar "$bin/../aries-hbase/target/aries-hbase-[0-9]*.[0-9]*.jar"
execute_jar=$execute_jar:$exe_jar
# aries-kafka jar
grep_thin_jar "$bin/../aries-kafka/target/aries-kafka-[0-9]*.[0-9]*.jar"
execute_jar=$execute_jar:$exe_jar
# aries-phoenix jar
grep_thin_jar "$bin/../aries-phoenix/target/aries-phoenix-[0-9]*.[0-9]*.jar"
execute_jar=$execute_jar:$exe_jar

# Extract external dependency
if [[ $kind == "hbase" ]]
then
  execute_jar=$execute_jar:`$hbase_home/bin/hbase classpath`
elif [[ $kind == "hdfs" ]]
then
  execute_jar=$execute_jar:`$hdfs_home/bin/hdfs classpath`
elif [[ $kind == "kafka" ]]
then
  for file in $kafka_home/libs/*
  do
    if should_include_file $file
    then
      execute_jar=$execute_jar:$file
    fi
  done
elif [[ $kind == "phoenix" ]]
then
  grep_phoenix_jar "$phoenix_home/*"
  execute_jar=$execute_jar:$exe_jar
fi
echo "Execution classpath: $execute_jar"

if [[ $help == "true" ]]
then
  $java_cmd -cp $execute_jar org.apache.aries.ToyPlayer --aries org.apache.aries.$toy_name --help
else
  $java_cmd -cp $execute_jar org.apache.aries.ToyPlayer --aries org.apache.aries.$toy_name --conf_dir $conf_dir
fi

